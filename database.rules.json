{
    "rules": {
      ".read": "auth !== null",
      "bd": {
        "$usernode": {
          ".read": true,
          ".write": "auth != null && auth.uid == $usernode",
          "$uid" : {
            ".read": true,
            ".write": "auth != null && auth.uid == $usernode",
            ".indexOn": "computedOrderField"
          }
        }
      },
      "users": {
        "$usernode": {
          ".write": "auth != null && auth.uid == $usernode"
        }
      }
    }
}